<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dots.test_1_uxflow" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".app.MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".DashboardActivity"
            android:label="@string/drawer_item_dashboard"
            android:theme="@style/MaterialDrawerTheme.TranslucentStatus">
            <intent-filter android:label="@string/app_name">
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".FocusActivity"
            android:label="@string/drawer_item_focus"
            android:theme="@style/MaterialDrawerTheme.TranslucentStatus"/>
        <activity
            android:name=".KickActivity"
            android:label="@string/drawer_item_kick"
            android:theme="@style/MaterialDrawerTheme.TranslucentStatus"/>
        <activity
            android:name=".TimelineActivity"
            android:label="@string/drawer_item_timeline"
            android:theme="@style/MaterialDrawerTheme.TranslucentStatus"/>
        <activity
            android:name=".OverviewActivity"
            android:label="@string/drawer_item_overview"
            android:theme="@style/MaterialDrawerTheme.TranslucentStatus"/>
        <activity
            android:name=".ProfileActivity"
            android:label="@string/drawer_item_profile"
            android:theme="@style/MaterialDrawerTheme.TranslucentStatus"/>


    </application>

</manifest>
